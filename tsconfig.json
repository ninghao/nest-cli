{
  "compilerOptions": {
    "declaration": true,
    "lib": ["es2017"],
    "module": "commonjs",
    "target": "es6",
    "skipLibCheck": true,
    "sourceMap": false,
    "strict": true,
    "useUnknownInCatchVariables": false,
    "types": ["node"],
    "outDir": "./dist",
    "baseUrl": "./",
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
